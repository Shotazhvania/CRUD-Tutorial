@model IEnumerable<Project1.Building>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AnimalsName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BuildDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AnimalsName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BuildDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.ActionLink("Edit Building", "Edit", new { id=item.ID }) |
                @Html.ActionLink("Details Building", "Details", new { id=item.ID }) |
                @Html.ActionLink("Delete Building", "Delete", new { id=item.ID },
                    new {onclick = "return confirm('Are you sure?');" })
            </td>
        </tr>
}
    </tbody>
</table>